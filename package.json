{
  "name": "allo-v2",
  "version": "1.0.0",
  "description": "Allo Protocol V2",
  "main": "index.js",
  "repository": "https://github.com/allo-protocol/allo-v2.git",
  "author": "Allo Protocol",
  "license": "MIT",
  "private": true,
  "scripts": {
    "compile": "forge build",
    "test": "forge test",
    "fmt": "forge fmt contracts/**/*.sol && forge fmt test/**/*.sol",
    "fork": "anvil --fork-url",
    "chain": "anvil --block-time 10",
    "storage-check": "npx @openzeppelin/upgrades-core validate",
    "coverage": "forge coverage",
    "coverage:report": "forge coverage --report lcov",
    "coverage:html": "cd contracts && forge coverage --report lcov && cd .. && genhtml lcov.info --branch-coverage --output-dir coverage --ignore-error category && cd contracts"
  },
  "devDependencies": {
    "@ethereum-attestation-service/eas-contracts": "^0.28.1",
    "@ethereum-attestation-service/eas-sdk": "^0.29.1",
    "@openzeppelin/contracts": "^4.9.1",
    "@openzeppelin/contracts-upgradeable": "^4.9.1",
    "@openzeppelin/upgrades-core": "^1.27.1",
    "@typechain/ethers-v6": "^0.4.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "chai": "^4.3.7",
    "dotenv": "^16.1.4",
    "eslint": "^8.42.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "ethereum-waffle": "*",
    "ethers": "^5.0.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^5.1.3"
  }
}
